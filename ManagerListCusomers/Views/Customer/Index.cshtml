
@{
    Layout = null;
}
<!DOCTYPE html>
@using ManagerListCusomers.Models;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Login/css/table.css">
    <link href="~/Content/SendMail/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/SendMail/css/mdb.min.css" rel="stylesheet">
    <link href="~/Content/SendMail/css/style.css" rel="stylesheet">
</head>
<body>
    <div>
        <button class="w3-button w3-white w3-border w3-round-large">
            @Html.ActionLink("Add", "Add", "Customer")
        </button> 
        <table class="w3-table-all w3-card-4">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
            </tr>
            @foreach (Customer item in (List<Customer>)ViewData["lstCustomer"])
            {
               <tr>
                   <td>@item.CustomerNo</td>
                   <td>@item.CustomerName</td>
                   <td>@item.CustomerAddress</td>
                   <td>@item.CustomerPhone</td>
                   <td>@item.CustomerEmail</td>
                   <td>
                       <button class="w3-button w3-white w3-border w3-round-large">
                           @Html.ActionLink("Edit", "Edit/" + item.CustomerNo, "Customer")
                       </button> 
                       <button class="w3-button w3-white w3-border w3-round-large">
                           @Html.ActionLink("Delete", "ActionDelete/" + item.CustomerID, "Customer", null, new
                      {
                          onclick = "return confirm('Are you sure?')"
                      })
                       </button>
                           <button class="w3-button w3-white w3-border w3-round-large" data-toggle="modal" data-target="#modalContactForm">Send Mail
                           </button>  
                   </td>
               </tr>
            }
        </table> 
    </div>
    @*Subform Send Mail*@

    <div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">New Message</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <i class="fa fa-envelope prefix grey-text"></i>
                        <input type="email" id="form29" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="form29">To:</label>
                    </div>

                    <div class="md-form mb-5">
                        <i class="fa fa-tag prefix grey-text"></i>
                        <input type="text" id="form32" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="form32">Subject</label>
                    </div>

                    <div class="md-form">
                        <i class="fa fa-pencil prefix grey-text"></i>
                        <textarea type="text" id="form8" class="md-textarea form-control" rows="4"></textarea>
                        <label data-error="wrong" data-success="right" for="form8">Your message</label>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-unique">Send<i class="fa fa-paper-plane-o ml-1"></i></button></div>
                </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/SendMail/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Content/SendMail/js/popper.min.js"></script>
    <script type="text/javascript" src="~/Content/SendMail/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/SendMail/js/mdb.min.js"></script>
</body>
</html>
